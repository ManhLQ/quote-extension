{
  "manifest_version": 2,
  "name": "Programming quotes",
  "description": "Extension for Programming quotes",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "activeTab",
    "https://programming-quotes-api.herokuapp.com/*"
  ],
  "browser_action": {
    "default_title": "Programming Quotes",
    "default_icon": "images/icon48.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "toggle-ext": {
      "suggested_key": {
        "default": "Alt+2"
      },
      "description": "A quick command"
    }
  },
  "icons":{
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}